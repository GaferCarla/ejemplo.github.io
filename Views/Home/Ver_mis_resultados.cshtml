<script src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.8/angular.min.js'></script>

@{
    ViewBag.Title = "Ver_mis_resultados";
    @Styles.Render("~/Content/licenseStyle.css");
    @Scripts.Render("~/Scripts/edditSurvey.js");
}

<div class="container">
    <div class="main">
        <h1>Mis encuestas</h1>

        <div class="container crud-table" ng-app="myApp" ng-controller="namesCtrl">
            <div id="crud" class="edditSurvey">
                <div class="clearfix">

                    <div class="col2">
                    </div>

                    <div class="col2">
                        <div class="form-inline">
                            <div class="form-group">
                                <label class="col">Buscar por título: </label>
                                <input class="form-control col" type="text" ng-model="searchName" />
                            </div>
                        </div>
                    </div>


                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th ng-click="orderBy('title')">
                                Título<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-down" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z" />
                                </svg>
                            </th>
                            <th ng-click="orderBy('dateSurvey')">
                                Fecha de creación<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-down" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z" />
                                </svg>
                            </th>

                        </tr>
                    </thead>
                    <tbody class="text-center">
                        <tr ng-repeat="user in resultUser = (users | filter: {'title': searchName}) | orderBy: order">
                            <td>
                                <a style="cursor: pointer; display: block; float: left;" href="@Url.Action("myIndividualResult","Home")">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="blue" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                                    </svg>
                                </a>
                            </td>
                            <td>{{user.title}} </td>
                            <td>{{user.dateSurvey}} </td>


                        </tr>
                    </tbody>
                </table>


                <div class="container">

                    <div class="col2">
                        <div class="hint-text float-left">Mostrando <b>5</b> resultados <br> de <b>25</b> entradas</div>
                    </div>
                    <div class="col2">
                        <nav>
                            <ul class="pagination justify-content-end ">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul>
                        </nav>

                    </div>



                </div>

            </div>

        </div>

    </div>





</div>

