@{
    ViewBag.Title = "Añadir usuarios";
    @Styles.Render("~/Content/styleAddUsser.css");
    



    <!-- Add Usser form -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">



    <!-- Drop files here partial -->
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">



}
<div class="container" style="margin-bottom:2em">
    <nav class="tabContainer">
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <button class="nav-link col2 active" id="nav-usser-tab" data-bs-toggle="tab" data-bs-target="#nav-usser" type="button" role="tab" aria-controls="nav-usser" aria-selected="true">Añadir usuario</button>
            <button class="nav-link col2" id="nav-import-tab" data-bs-toggle="tab" data-bs-target="#nav-import" type="button" role="tab" aria-controls="nav-import" aria-selected="false">Importar lista de usuarios</button>

        </div>
    </nav>
    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-usser" role="tabpanel" aria-labelledby="nav-usser-tab">
            <!-- Form add ussers partial-->
            <form class="my-form">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 px-4 mb-4 col-sm-6">
                            <label class="row">Nombre(s)</label>
                            <input class="row" type="text" required>
                        </div>
                        <div class="col-12 px-4 mb-4 col-sm-6">
                            <label class="row">Apellidos(s)</label>
                            <input type="text" required>
                        </div>
                        <div class="col-12 px-4 mb-4 col-sm-6">
                            <label class="row">Empresa</label>
                            <select>

                                <option selected disabled>-- Seleccione opción --</option>
                                <option>Opcion 1</option>
                                <option>Opcion 2</option>
                                <option>Other</option>
                            </select>
                        </div>

                        <div class="col-12 px-4 mb-4 col-sm-6">
                            <label class="row">Rol</label>
                            <select>

                                <option selected disabled>-- Seleccione opción --</option>
                                <option>Opcion 1</option>
                                <option>Opcion 2</option>
                                <option>Other</option>
                            </select>
                        </div>
                    </div>

                        <li class="colx2 ">
                            <div class="grid ">
                                <div class="col1">
                                    <label class="row">Correo electrónico</label>
                                    <input type="email" required>
                                </div>

                            </div>
                            <div class="grid">
                                <div class="col1">
                                    <label class="row">Departamento</label>
                                    <input type="text" required>
                                </div>
                            </div>
                            <div class="grid">
                                <div class="col1">
                                    <label class="row">Sucursal</label>
                                    <input type="text" required>
                                </div>
                            </div>
                        </li>
                        <li class="colx2">
                            <div class="grid" style="padding: 40px 0;">

                                <button class="btn-grid" type="submit" style="background-color: green; color: white;">
                                    <span class="back">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="27" height="27" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                                        </svg>
                                    </span>
                                    <span class="front">Añadir</span>
                                </button>
                            </div>

                        </li>

                    </ul>
                </div>
            </form>
        </div>



        <div class="tab-pane fade" id="nav-import" role="tabpanel" aria-labelledby="nav-import-tab">
            <!-- Drop files here partial-->
            <div>
                <div class="container">
                    <h3>Subir lista de usuarios*:</h3>

                </div>
                <div class="container">
                    <div id="file-uploader1" class="wrapper js"></div>


                    <script type="text/template" id="file-uploader-template">
                        <form class="js--upload-form is-droppable">
                            <span class="text--center">
                                <i class="fa fa-cloud-upload fa-2"></i>
                                <span class="js--advanced-upload">Arrastra y suelta tus archivos aquí, o da click en<label class="btn btn--link" for="file">"Subir"</label></span>
                                <input type="file" name="files[]" id="file" class="js--basic-upload hide" data-multiple-caption="{count} files selected" multiple="" accept=".pdf,.xlsx">
                            </span>
                            <table class="js--files-list" border="0"></table>
                        </form>
                    </script>

                    <script type="text/template" id="document-item-view">
                        <td><a href="<%= data %>" download="<%= name %>" target="_blank"><%= name %></a></td>
                        <td><%= type %>
                        <td><button class="btn btn--link js--remove-file"><i class="fa fa-times-circle"></i></button></td>
                    </script>
                    <!-- partial -->
                    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
                    <script src='https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js'></script>
                    <script src='https://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.3.3/backbone-min.js'></script>
                    <script src='https://cdnjs.cloudflare.com/ajax/libs/backbone.marionette/2.4.7/backbone.marionette.min.js'></script>
                    @Scripts.Render("~/Scripts/addUsser.js")


                </div>
                <div class="container smallcontainer">
                    <small><p>*Las celdas deben tener el siguiente orden: nombre(s), apellido(s), correo electrónico, sucursal, empresa y rol (aplicador, encuestado, administrador).</p></small>

                    <div class="col1">

                        <button class="submitButtom" type="submit" style="background-color: green; color: white;">

                            <span class="front">Añadir</span>
                        </button>
                    </div>
                </div>

            </div>


        </div>

    </div>
</div>

